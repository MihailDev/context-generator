{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Context Generator Configuration",
  "description": "Schema for context generator configuration files",
  "type": "object",
  "required": [
    "documents"
  ],
  "properties": {
    "documents": {
      "type": "array",
      "description": "List of documents to be generated",
      "items": {
        "$ref": "#/definitions/Document"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "Document": {
      "type": "object",
      "required": [
        "description",
        "outputPath"
      ],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the document"
        },
        "outputPath": {
          "type": "string",
          "description": "Path where the generated document will be written"
        },
        "sources": {
          "type": "array",
          "description": "List of sources to include in this document",
          "items": {
            "type": "object",
            "required": [
              "type"
            ],
            "oneOf": [
              {
                "$ref": "#/definitions/FileSource"
              },
              {
                "$ref": "#/definitions/UrlSource"
              },
              {
                "$ref": "#/definitions/TextSource"
              }
            ]
          },
          "default": []
        }
      }
    },
    "FileSource": {
      "type": "object",
      "required": [
        "type",
        "sourcePaths"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "file"
          ],
          "description": "Type of the source"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the source"
        },
        "sourcePaths": {
          "oneOf": [
            {
              "type": "string",
              "description": "Path to source file or directory"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of paths to source files or directories"
            }
          ]
        },
        "filePattern": {
          "type": "string",
          "description": "Pattern to match files",
          "default": "*.php"
        },
        "excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Patterns to exclude files",
          "default": []
        },
        "showTreeView": {
          "type": "boolean",
          "description": "Whether to show a tree view of the files",
          "default": true
        }
      }
    },
    "UrlSource": {
      "type": "object",
      "required": [
        "type",
        "urls"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "url"
          ],
          "description": "Type of the source"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the source"
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "URLs to fetch content from",
          "minItems": 1
        },
        "selector": {
          "type": [
            "string",
            "null"
          ],
          "description": "CSS selector to extract specific content (null for full page)"
        }
      }
    },
    "TextSource": {
      "type": "object",
      "required": [
        "type",
        "content"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "text"
          ],
          "description": "Type of the source"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the source"
        },
        "content": {
          "type": "string",
          "description": "Text content"
        }
      }
    }
  }
}