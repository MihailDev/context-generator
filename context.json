{
  "settings": {
    "modifiers": {
      "api-docs": {
        "name": "php-content-filter",
        "options": {
          "keep_doc_comments": false,
          "keep_method_bodies": false
        }
      }
    }
  },
  "documents": [
    {
      "description": "Generator loaders",
      "outputPath": "api/loaders.md",
      "sources": [
        {
          "type": "composer",
          "packages": [
            "symfony/finder"
          ],
          "contains": [
            "NumberComparator"
          ]
        }
      ]
    },
    {
      "description": "Composer source",
      "outputPath": "api/source.md",
      "sources": [
        {
          "type": "file",
          "sourcePaths": [
            "src/Source/Url",
            "src/Lib/HttpClient"
          ]
        }
      ]
    }
  ]
}